<p id="notice"><%= notice %></p>

<% if current_user && @profiles.first %>
  <table class="table table-responsive">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Tags</th>
      </tr>
    </thead>

    <tbody>
      <% @profiles.each do |profile| %>
        <tr>
          <td><%= profile.name %></td>
          <td>
            <% profile.get_tags.each do |tag| %>
              <%= content_tag(:span, class: 'tag' ) do %>
                <%= tag %>
              <% end %>
            <% end %>
          </td>

          <td><%= link_to 'Start research', profile_path(profile) + '/search_init' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Profile', new_profile_path %>

<% else %>

  <div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0) 0%, rgba(0,36,61,0.25) 60%), url('assets/woman-background-2.jpeg');">
    <div class="banner-content">
      <h1>MES FAVORITES</h1>
      <p>Parle-nous d'elle et d√©couvre les cadeaux</p>
      <%= link_to 'GO', new_profile_path, class: "btn btn-lg" %>
    </div>
  </div>

<% end %>


