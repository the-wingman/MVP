<div class="row">
  <div class="form">
  	<div class="form-group-row">
  		<div class="col-sm-12 col-md-5">
  			<%= render "gifts/show_search", :gift => @gifts.first %>
  		</div>
      <div class="col-sm-12 col-md-2 text-center" id="dislike-button">
        <div onClick="document.forms['none'].submit();" >
          <%= form_tag({action: 'search_next'},  options={:method=>:post, :name => ('none')}) do %>
            <%= image_tag 'cross.png', size: '64', id: 'dislike-img'%>
            <%= hidden_field_tag :chosen, -1 %>
          <% end %>
        </div>
      </div>
      <div class="col-sm-12 col-md-5">
        <%= render "gifts/show_search", :gift => @gifts.last %>
      </div>
  	</div>
  </div>
</div>

  <div class="row">
    <% if @history.blank? == false %>
      <div class="row">
        <div class="col-sm-12">
          <h4 class="text-center">Ce que tu as deja retenu...</h4>
        </div>
      </div>
    <% end %>
    <div class="row">
      <% @history.each do |g|%>
        <div class="col-lg-2 col-md-3 col-xs-4 thumb gift-card-history" style="background-image: url(<%= g.image_url %>">
          <span class="gift-card-history-meta">
            <%= link_to g.name, gift_path(g) %>
          </span>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class= "text-center" id="back-to-search">
      <%= link_to 'Retour aux favorites', root_path, class: "back-button" %>
    </div>
  </div>
